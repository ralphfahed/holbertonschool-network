#!/usr/bin/env bash

# Must be run as root
if [ "$EUID" -ne 0 ]; then
  echo "Please run as root"
  exit 1
fi

# Backup hosts file
cp /etc/hosts /etc/hosts.bak

# Filter out lines containing localhost or facebook.com, save to temp
grep -vE 'localhost|facebook.com' /etc/hosts > /tmp/hosts.new

# Add desired mappings
echo "127.0.0.2 localhost" >> /tmp/hosts.new
echo "8.8.8.8 facebook.com" >> /tmp/hosts.new
